{
    "name": "tailwindcss-addons",
    "description": "A set of Tailwind CSS preflights, themes, utilities and variants.",
    "version": "4.0.3",
    "license": "MIT",
    "repository": "github:babakfp/tailwindcss-addons",
    "homepage": "https://tailwindcss-addons.vercel.app",
    "scripts": {
        "format": "prettier -w ."
    },
    "peerDependencies": {
        "tailwindcss": "4"
    },
    "devDependencies": {
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^4.0.9"
    },
    "files": [
        "/src/"
    ],
    "exports": {
        ".": "./src/main.css",
        "./preflight.css": "./src/preflight.css",
        "./theme.css": "./src/theme.css",
        "./utilities.css": "./src/utilities.css",
        "./variants.css": "./src/variants.css",
        "./preflight/*": "./src/preflight/*",
        "./theme/*": "./src/theme/*",
        "./utilities/*": "./src/utilities/*.css",
        "./utilities/bg-pattern": "./src/utilities/bg-pattern.js",
        "./variants/*": "./src/variants/*"
    },
    "keywords": [
        "tailwind",
        "tailwindcss"
    ],
    "type": "module"
}
